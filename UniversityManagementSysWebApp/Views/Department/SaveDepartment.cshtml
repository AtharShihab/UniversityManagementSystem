<fieldset>
    <legend>Save Department</legend>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-5">
                <form id="saveDepartmentForm" method="POST">
                    <div class="form-group">
                        <label for="DeptCode">Code</label>
                        <input id="DeptCode" name="DeptCode" type="text" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="DeptName">Name</label>
                        <input id="DeptName" name="DeptName" type="text" class="form-control" />
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                    <div>
                        @if (ViewBag.Message != null)
                        {
                            <h3>@ViewBag.Message</h3>
                        }
                    </div>
                </form>
            </div>

        </div>
    </div>
</fieldset>


@section script
{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $("#saveDepartmentForm").validate({
            rules: {
                DeptCode: {
                    required: true,
                    minlength: 2,
                    maxlength: 7
                },
                DeptName: "required"
            },
            messages: {
                DeptCode: {
                    required: "Please enter Department Code",
                    minlength: "Code must be at least 2 character long",
                    maxlength: "Code must be less than or equal to 7 character"
                },
                DeptName: "Please enter Department Name"
            }
        });
    </script>
}


